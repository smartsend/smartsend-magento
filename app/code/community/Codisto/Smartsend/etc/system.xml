<config>
    <sections>
        <carriers>
            <groups>
                <smartsend translate="label" module="smartsend">
                    <label>Smartsend</label>
                    <frontend_type>text</frontend_type>
                    <comment><![CDATA[<a href="http://www.smartsend.com.au/" target="_blank">Sign up for Smartsend</a>]]></comment>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <name translate="label">
                            <label>Method Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </name>
                        <corporate_client_code translate="label">
                            <label>Corporate Client Code</label>
                            <frontend_type>obscure</frontend_type>
                            <comment><![CDATA[Don't have a Smartsend corporate client code?<br/><a href="http://www.smartsend.com.au/" target="_blank">Sign up for Smartsend here!</a>]]></comment>
                            <tooltip><![CDATA[<p>A Smartsend corporate client code isn't required to use Smartsend's freight gateway solution.</p><p>However, being a Smartsend corporate client provides priority freighting and other benefits, please visit www.smartsend.com.au for more information.</p>]]></tooltip>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </corporate_client_code>
                        <allowed_servicetypes translate="label">
                            <label>Allowed Service Types</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_servicetype</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </allowed_servicetypes>
                        <showmethod translate="label">
                            <label>Show Method if Not Applicable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>60</sort_order>
                            <frontend_class>shipping-skip-hide</frontend_class>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </showmethod>
                        <specificerrmsg translate="label">
                            <label>Displayed Error Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </specificerrmsg>
                        <handling_type translate="label">
                            <label>Calculate Handling Fee</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shipping/source_handlingType</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </handling_type>
                        <handling_action translate="label">
                            <label>Handling Applied</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shipping/source_handlingAction</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </handling_action>
                        <handling_fee translate="label">
                            <label>Handling Fee</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </handling_fee>
                        <receipted_delivery translate="label">
                            <label>Receipted Delivery Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_receipteddelivery</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </receipted_delivery>
                        <taillift_booking translate="label">
                            <label>Taillift Booking Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_tailliftbooking</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </taillift_booking>
                        <default_package_description translate="label">
                            <label>Default Package Description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_packagedescription</source_model>
                            <sort_order>125</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_package_description>
                        <default_measurement_unit translate="label">
                            <label>Default Measurement Unit</label>
                            <frontend_type>select</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_measurementunit</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_measurement_unit>
                        <default_weight_unit translate="label">
                            <label>Default Weight Unit</label>
                            <frontend_type>select</frontend_type>
                            <source_model>smartsend/shipping_carrier_smartsend_source_weightunit</source_model>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_weight_unit>
                        <default_weight translate="label">
                            <label>Default Product Weight</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>145</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_weight>
                        <default_length translate="label">
                            <label>Default Product Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_length>
                        <default_width translate="label">
                            <label>Default Product Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_width>
                        <default_height translate="label">
                            <label>Default Product Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_height>
                        <sort_order translate="label">
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>190</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_order>
                        <debug translate="label">
                            <label>Debug</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </debug>
                    </fields>
                </smartsend>
            </groups>
        </carriers>
    </sections>
</config>